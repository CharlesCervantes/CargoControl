{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "composite": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*",
        "./dist/*"
      ]
    }
  },
  "include": [
    "src"
  ],
}